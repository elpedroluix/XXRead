<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XXRead"
             x:Class="XXRead.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Label" x:Key="LabelPrimary">
                <Setter Property="TextColor" Value="{Binding ThemeFontPrimary}"/>
            </Style>

            <Style TargetType="Label" x:Key="LabelSecondary">
                <Setter Property="TextColor" Value="{Binding ThemeFontSecondary}"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
